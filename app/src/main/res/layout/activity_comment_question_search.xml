<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.laojiu.app.view.TitleView
        android:id="@+id/comment_question_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="答案逆推" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/comment_question_search_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:hint="请输入答案关键字"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="@dimen/text_size_16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/comment_question_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/ripple_main_bg"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_question_search_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>